{
  "name": "pythia-mcp",
  "version": "0.1.0",
  "type": "module",
  "description": "Pythia MCP Server - Task management and documentation workflow tools for Model Context Protocol",
  "author": "Serhii",
  "main": "./dist/src/index.js",
  "bin": "./dist/src/index.js",
  "files": [
    "dist/src/index.js",
    "dist/tools/*-*.js",
    "dist/prompts/*.js",
    "dist/resources/*.js",
    "dist/resources/*.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "task-management",
    "documentation",
    "workflow",
    "pythia"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pythia-mcp.git"
  },
  "scripts": {
    "setup": "ts-node tools/installCore.ts",
    "test": "vitest run tools/tests/*.test.ts",
    "mcp-server": "npm run build-mcp && ts-node --esm src/index.ts",
    "build": "tsc",
    "build-mcp": "tsc -p tsconfig.mcp.json",
    "validate-links": "ts-node tools/linkValidator.ts",
    "fix-links": "ts-node tools/linkValidator.ts --fix",
    "check-coverage": "ts-node tools/coverageChecker.ts",
    "fix-coverage": "ts-node tools/coverageChecker.ts --fix",
    "update-map": "ts-node tools/updateDocumentationMap.ts",
    "update-map-add-all": "ts-node tools/updateDocumentationMap.ts --add-all",
    "update-map-interactive": "ts-node tools/updateDocumentationMap.ts --interactive",
    "update-status": "ts-node tools/updateWorkItemStatus.ts",
    "archive-tasks": "ts-node tools/archiveTasks.ts",
    "create-doc": "ts-node tools/createDocument.ts",
    "validate-quality": "ts-node tools/validateDocumentQuality.ts",
    "check-quality": "ts-node tools/checkDocQuality.ts",
    "validate-mcp": "mcp validate",
    "validate-mcp-all": "ts-node tools/validateMCPComponents.ts",
    "test-mcp": "npm run build-mcp && npm run validate-mcp-all",
    "sync-confluence": "markdown-confluence",
    "sync-confluence:dry": "markdown-confluence --dry-run",
    "prepare": "npm run build-mcp",
    "version": "npm run changelog && git add CHANGELOG.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/lunr": "^2.3.7",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "compromise": "^14.12.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.6.0",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "glob": "^10.3.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.16",
    "jq": "^1.7.2",
    "lunr": "^2.3.9",
    "markdownlint": "^0.31.1",
    "mcp-framework": "^0.2.15",
    "mdast-util-to-string": "^4.0.0",
    "natural": "^6.7.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.3",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@markdown-confluence/cli": "^5.5.2",
    "@types/cosmiconfig": "^5.0.3",
    "@types/natural": "^5.1.5",
    "@types/node": "^22.13.10",
    "conventional-changelog-cli": "^5.0.0",
    "markdown-link-check": "^3.13.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
