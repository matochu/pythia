# EditorConfig for Pythia documentation
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files with XML tags
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off
insert_final_newline = true

# Preserve XML tag structure in command files
[commands/*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts}]
indent_style = space
indent_size = 2

# Package.json
[package.json]
indent_style = space
indent_size = 2
